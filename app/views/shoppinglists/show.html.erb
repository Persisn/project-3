<%= link_to "Go back to shopping", stocks_path, class: "btn btn-primary" %>
<br>
<h1 style="font-size:35px; color:#000080"><%= @shoppinglist.name_shoppinglist %></h1>

<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Item</th>
        <th>Price</th>
        <th>Amount</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <% @shoppinglist_items.each do |item| %>
      <% if @shoppinglist_items.length == 0 %>
      <td> There are no items in your shopping list. </td>
      <% end %>
    <tbody>
      <tr>
        <td><%= item.stock.name_item%></td>
        <td>$<%='%.2f' % item.stock.price%></td>
        <td>
          <%= button_to "-", item_path(:id => item.id), method: :put, params: {operation: "minus"}, :class => 'btn btn-mini', form: {style: 'display:inline-block;'}%>
          <%= item.quantity_ordered %>
          <%= button_to "+", item_path(:id => item.id), method: :put, params: {operation: "add"},  :class => 'btn btn-mini', form: {style: 'display:inline-block;'}%>
        </td>
        <td>$<%='%.2f' % (item.stock.price * item.quantity_ordered) %></td>
        <td><%= link_to "X",  item_path(:id => item.id), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, remote: true %></td>
      </tr>
      <% end %>
      <tr class="info">
        <td>Your total:</td>
        <td></td>
        <td></td>
        <td>$<%='%.2f' % @shoppinglist.total_price %></td>
      </tr>
    </tbody>
  </table>
</div>



  <%= link_to 'Edit', edit_user_shoppinglist_path(:id), class: "btn btn-secondary" %>

  <%= link_to "Create another shopping list", user_shoppinglists_path(:id), class: "btn btn-secondary" %>
</div>
