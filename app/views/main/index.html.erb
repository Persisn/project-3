<div class="row">
      <div class="col-2">
        <nav class="d-none d-sm-block sidebar" style="background-color:#F3F3F3 ; height:730px;">
              <ul class="nav nav-pills flex-column">
                <li class="nav-item" >
                  <a class="nav-link active" style="background-color:#E7E7E7; color:black;">Categories <span class="sr-only">(current)</span></a>
                </li>
                <% @category.each do |category| %>
                <li class="nav-item" >
                <%= link_to category.name_category, stocks_type_path(:id => category.id), class:"nav-link" %>
                </li>
                <% end %>
              </ul>
    </div>
      <div class="col-10">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <%= image_tag('1.jpg', size: "200x300", alt: "First slide", style: 'display: block; margin: auto; width: 50%; height: 50%') %>
        </div>
        <div class="carousel-item">
          <%= image_tag('2.jpg', size: "200x300", alt: "First slide", style: 'display: block; margin: auto; width: 50%; height: 50%') %>
        </div>
        <div class="carousel-item">
          <%= image_tag('3.jpg', size: "200x300", alt: "First slide", style: 'display: block; margin: auto; width: 50%; height: 50%') %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <br>
    <h2 style="font-size:28px; color:#ec701d; margin:auto">Latest items</h2>
    <div class= "row">
 
    <% @stocks.each do |stock| %>
    <div class="card-deck col-sm-2", style="padding: 5px 2px 5px 2px; width:150px; justify:center;">
      <div class="card text-center" style="height: 360px;">
        <img class="card-img-top" src="<%= stock.img %>" alt="Card image cap" style="height: 95px;">
        <div class="card-block" style="font-size:14px;">
          <h4 class="card-title", style="height: 100px; overflow: overlay; font-size:18px"><%= stock.name_item%></h4>
          <p>$<%='%.2f' % stock.price%></p>
          <% if user_signed_in? %>
          <%= form_for Item.new do |f| %>
              <%= f.hidden_field :stock_id, value: stock.id %>
            <div class="field" style="height: 25px;">
              <%= f.label("Quantity:") %>
              <%= f.number_field :quantity_ordered, value: 1, min: 1, max:100, class: "col-5 text-center" %>
            </div>
            <div class="field" >
              <%= f.label("Select list:") %>
              <% if current_user.shoppinglists.where(:paid_on=> nil).count > 0 %>
                <%= f.collection_select :shoppinglist_id, current_user.shoppinglists.where(:paid_on=> nil).order(:updated_at),:id, :name_shoppinglist,{}, {:class=>'col-5 text-center', :style=> "width: -webkit-fill-available;"} %>
              <% else %>
                <%= f.fields_for :shoppinglists do |o| %>
                  <%= o.text_field :name_shoppinglist, :value => 'Default shopping list' %>
                <% end %>
              <% end %>
            </div>
            <div class="card-footer" style="height: 72px;">
              <%= f.submit "Add to list"%>
              <div class="block">
                <% if user_signed_in? && current_user.type_admin %>
                <%= link_to "Edit", edit_stock_path(:id => stock.id) %>
                <%= link_to "Delete", stock_path(:id => stock.id), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, remote: true %>
                <% end %>
              </div>
            </div>
            <% end %>
            <% else %>
            <br><br>
            <%= link_to "Log in to continue", new_user_session_path %></li>
            <% end %>

        </div>
      </div>
</div>
    <% end %>


    </div>
    </div>
