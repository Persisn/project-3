<div class="row">
  <% @stocks.each do |stock| %>
  <div class="card-deck col-sm-2", style="padding: 5px;">
    <div class="card text-center" style="height: 350px;">
      <img class="card-img-top" src="<%= stock.img %>" alt="Card image cap" style="height: 85px;">
      <div class="card-block">
        <h4 class="card-title", style="height: 100px; overflow: overlay;"><%= stock.name_item%> $<%='%.2f' % stock.price%></h4>
        <% if user_signed_in? %>
        <%= form_for Item.new do |f| %>
            <%= f.hidden_field :stock_id, value: stock.id %>
          <div class="field" style="height: 25px;">
            <%= f.label("Quantity:") %>
            <%= f.number_field :quantity_ordered, value: 1, min: 1, max:100, class: "col-5 text-center" %>
          </div>
          <div class="field">
            <%= f.label("Shopping list:") %>
            <% if current_user.shoppinglists.where(:paid_on=> nil).count > 0 %>
              <%= f.collection_select :shoppinglist_id, current_user.shoppinglists.where(:paid_on=> nil).order(:updated_at),:id, :name_shoppinglist,{}, {:class=>'col-5 text-center list_slave', :style=> "width: -webkit-fill-available;"} %>
            <% else %>
              <%= f.fields_for :shoppinglists do |o| %>
                <%= o.text_field :name_shoppinglist, :value => 'First shopping list' %>
              <% end %>
            <% end %>
          </div>
          <div class="card-footer" style="height: 72px;">
            <%= f.submit "Add to list"%>
            <div class="block">
              <% if user_signed_in? && current_user.type_admin %>
              <%= link_to "Edit", edit_stock_path(:id => stock.id) %>
              <%= link_to "Delete", stock_path(:id => stock.id), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, remote: true %>
              <% end %>
            </div>
          </div>
          <% end %>
          <% else %>
          <br><br>
          <%= link_to "Log in to continue", new_user_session_path %></li>
          <% end %>

      </div>
    </div>
  </div>
  <% end %>
</div>
